<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:background="@drawable/white_border"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="4dp"
            android:text="18.00"
            android:textColor="#FFFF5810"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="元"
            android:textColor="@color/font_hint"
            android:textSize="16dp"
            app:layout_constraintLeft_toRightOf="@id/fee"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="4dp"
            android:text="已优惠-"
            android:textColor="@color/font_orange"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fee" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="236dp"
            android:layout_marginTop="36dp"
            android:text="费用明细"
            android:textColor="@color/font_hint"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/fee_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="33dp"
            android:src="@drawable/cursor_right"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="4dp"
            android:text="7元"
            android:textColor="@color/font_orange"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fee" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
       android:background="@color/pressed"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="10dp"
        android:background="@drawable/white_border"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.example.sosocar.View.CircleImageView
            android:id="@+id/driver_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/person_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/car_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="鄂FAF011"
            android:textColor="#FF101010"
            android:textSize="28dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/driver_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/car_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="黑色桑塔纳"
            android:textColor="@color/gray"
            android:textSize="14dp"
            app:layout_constraintLeft_toRightOf="@id/driver_icon"
            app:layout_constraintTop_toBottomOf="@id/car_number" />


        <TextView
            android:id="@+id/car_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="96dp"
            android:text="大众"
            android:textColor="@color/gray"
            android:textSize="14dp"
            app:layout_constraintLeft_toRightOf="@id/driver_icon"
            app:layout_constraintTop_toBottomOf="@id/car_number" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="8dp"
            android:background="@color/gray"
            app:layout_constraintLeft_toRightOf="@id/car_name"
            app:layout_constraintTop_toBottomOf="@id/car_number" />

        <ImageButton
            android:id="@+id/calling"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="24dp"
            android:scaleType="fitCenter"
            android:src="@drawable/chat"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/driver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="8dp"
            android:text="胡师傅"
            android:textColor="@color/gray"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/car_name" />

        <RatingBar
            android:id="@+id/driver_rating_star"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:isIndicator="true"
            android:numStars="5"
            android:progressTint="#FFFF580E"
            android:rating="3.5"
            android:stepSize="0.5"

            app:layout_constraintLeft_toRightOf="@id/driver_name"
            app:layout_constraintTop_toBottomOf="@id/car_type" />

        <TextView
            android:id="@+id/driver_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="22dp"
            android:text="5.0分"
            android:textColor="#FFFF5810"
            android:textSize="12dp"
            app:layout_constraintLeft_toRightOf="@id/driver_rating_star"
            app:layout_constraintTop_toBottomOf="@id/calling" />

        <TextView
            android:id="@+id/driver_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="22dp"
            android:text="9651单"
            android:textColor="#FFFF5810"
            android:textSize="12dp"
            app:layout_constraintLeft_toRightOf="@id/driver_grade"
            app:layout_constraintTop_toBottomOf="@id/calling" />

        <Button
            android:id="@+id/call_police"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="105dp"
            android:background="@drawable/call_police"
            android:text="立 即 支 付"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="normal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>






</LinearLayout>
