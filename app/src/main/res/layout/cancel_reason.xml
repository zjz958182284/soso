<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFF1F2F1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_height="70dp">

        <ImageButton
            android:id="@+id/cancel_reason_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cursor_left"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="90dp"
            android:text="选择取消原因"
            android:textSize="20dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="550dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="平台相关"
                android:textColor="#FF101010"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_margin="10dp"/>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardCornerRadius="8dp"
                android:background="@color/white"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:id="@+id/involve_platform"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="18dp"
                    android:paddingBottom="7dp"
                    android:paddingRight="18dp">

                    <RadioButton
                        android:id="@+id/reason_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#FF1778FB"
                        android:layout_marginTop="7dp"
                        android:layoutDirection="rtl"
                        android:textSize="16dp"
                        android:text="平台派单太远" />

                    <RadioButton
                        android:id="@+id/reason_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#FF1778FB"
                        android:layout_marginTop="7dp"
                        android:layoutDirection="rtl"
                        android:textSize="16dp"
                        android:text="上车位置错误/找不到上车位置" />


                </RadioGroup>

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="司机相关"
                android:textColor="#FF101010"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_margin="10dp"/>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="8dp"
                android:background="@color/white"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:id="@+id/involve_driver"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:paddingBottom="7dp">

                    <RadioButton
                        android:id="@+id/reason_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:buttonTint="#FF1778FB"
                        android:textSize="16dp"
                        android:layoutDirection="rtl"
                        android:text="联系不上司机" />

                    <RadioButton
                        android:id="@+id/reason_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:buttonTint="#FF1778FB"
                        android:textSize="16dp"
                        android:layoutDirection="rtl"
                        android:text="司机以各种理由不来接我" />

                    <RadioButton
                        android:id="@+id/reason_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:buttonTint="#FF1778FB"
                        android:layoutDirection="rtl"
                        android:textSize="16dp"
                        android:text="司机要求取消订单" />

                    <RadioButton
                        android:id="@+id/reason_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:buttonTint="#FF1778FB"
                        android:layoutDirection="rtl"
                        android:textSize="16dp"
                        android:text="司机原地不动或反方向形式" />

                    <RadioButton
                        android:id="@+id/reason_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:buttonTint="#FF1778FB"
                        android:layoutDirection="rtl"
                        android:textSize="16dp"
                        android:text="司机要求加价或现金交易" />

                    <RadioButton
                        android:id="@+id/reason_8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:buttonTint="#FF1778FB"
                        android:layoutDirection="rtl"
                        android:textSize="16dp"
                        android:text="司机迟到" />

                    <RadioButton
                        android:id="@+id/reason_9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:buttonTint="#FF1778FB"
                        android:layoutDirection="rtl"
                        android:textSize="16dp"
                        android:text="不上订单显示车辆或司机" />


                </RadioGroup>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="自己原因"
                android:textColor="#FF101010"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_margin="10dp"/>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardCornerRadius="8dp"
                android:background="@color/white"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:id="@+id/involve_user"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="18dp"
                    android:paddingBottom="7dp"
                    android:paddingRight="18dp">

                    <RadioButton
                        android:id="@+id/reason_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#FF1778FB"
                        android:layout_marginTop="7dp"
                        android:layoutDirection="rtl"
                        android:textSize="16dp"
                        android:text="平台派单太远" />

                    <RadioButton
                        android:id="@+id/reason_11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#FF1778FB"
                        android:layout_marginTop="7dp"
                        android:layoutDirection="rtl"
                        android:textSize="16dp"
                        android:text="选择其他出行工具" />

                    <RadioButton
                        android:id="@+id/reason_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#FF1778FB"
                        android:layout_marginTop="7dp"
                        android:layoutDirection="rtl"
                        android:textSize="16dp"
                        android:text="目的地有误" />

                </RadioGroup>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/cancel_order_submit"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="30dp"
        android:text="确认提交"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@drawable/cancel_reason_button"/>


</LinearLayout>