<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="8dp"

    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/order_type"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="24dp"
            android:text="约车"
            android:textColor="#FF101010"

            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/order_time"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="24dp"
            android:text="2020/7/18 17:32"
            android:textColor="#FF101010"

            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="@id/order_type"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/order_status"
            android:padding="2dp"
            android:text="待出发"
            android:textColor="#FFFF5810"
            android:textSize="14dp"
            app:layout_constraintLeft_toRightOf="@id/order_time"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/goto_order_detail"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginLeft="104dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/cursor_right"
            app:layout_constraintLeft_toLeftOf="@id/order_status"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView

            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="32dp"

            android:layout_marginTop="28dp"
            android:background="@drawable/point_blue"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/order_type" />

        <TextView
            android:id="@+id/origin"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="21dp"
            android:text="越秀财富世纪广场-停车场"
            android:textColor="#FF101010"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/order_time" />


        <TextView
            android:id="@+id/destination"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:text="越秀财富世纪广场-停车场"
            android:textColor="#FF101010"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/origin"
            app:layout_constraintVertical_bias="0.063" />

        <TextView

            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="32dp"

            android:layout_marginTop="68dp"
            android:background="@drawable/point_green"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/order_type" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>


